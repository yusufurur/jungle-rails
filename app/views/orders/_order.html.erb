<% product = Product.find_by(id: product_id) %>

<tr>
  <td>
  <%= image_tag product.image.url(:tiny) %>
  </td>
  <td>
    <h4><%=product.name %></h4>
    <br>
    <p><%=product.description %></p>
  </td>
  <td>
    <%= humanized_money_with_symbol product.price %>
  </td>
  <td>
    <%= product.quantity %>
  </td>
  <td>
    <%=  humanized_money_with_symbol product.price * quantity %>
    
  </td>

</tr>